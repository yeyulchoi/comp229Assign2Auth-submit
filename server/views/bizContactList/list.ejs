
<%- include ('../partials/header') %>


 <!--Main Content-->
 <main class="container">
   <div class="row">
    <div class="col-md-offset-3 col-md-6">
        <h1><%= title %></h1>

        <% if(typeof displayName == 'string' && displayName) { %>            
        <a href="/biz-contact/add" class="btn btn-primary" role="button">
        <i class="fas fa-plus-circle"></i> Add a Client </a>
        <% } %>

       
        <br>
        <table class="table table-bordered table-striped table-hover">
            <!-- header row -->
            <tr>
                <th class="text-center col-2">User Name</th>
                <th class="text-center col-2">Phone Number</th>
                <th class="text-center col-1">Email Address</th>
                <th class="text-center col-1">Age</th>
                <% if(typeof displayName == 'string' && displayName) { %>   
                    <th class="text-center col-1"></th>
                    <th class="text-center col-1"></th>
                <% } %>
            </tr>

            <!-- repeatable template row -->
            <% for(let count = 0; count < ContactList.length; count++) {%>
                <tr>
                    <td class="text=center col-2"><%= ContactList[count].username %></td>
                    <td class="text=center col-2"><%= ContactList[count].phonenumber %></td>
                    <td class="text=center col-1"><%= ContactList[count].email %></td>
                    <td class="text=center col-1"><%= ContactList[count].age %></td>
                    <% if(typeof displayName == 'string' && displayName) { %>   

                    <td class="text-center col-1">
                        <a href="/biz-contact/edit/<%= ContactList[count]._id %>" class="btn btn-primary " >
                        <i class="fas fa-pencil alt"></i> Edit </a>
                    </td>
                    <td class="text-center col-1">
                        <a href="/biz-contact/delete/<%= ContactList[count]._id %>" class="btn btn-danger" >
                        <i class="fas fa-trash-alt"></i>Delete</a>
                    </td>
                    <% } %>
                </tr>
            <% } %>
        </table>
    </div>
   </div>
 </main>
<%- include ('../partials/footer') %>