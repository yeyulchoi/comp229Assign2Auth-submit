
<%- include ('../partials/header') %>


<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>

            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField">Client Name</label>
                    <input type="text" class="form-control" id="nameTextField" placeholder="Enter a Client Name" name="username"
                        value="<%= ContactList.username %>" required>
                </div>

                <div class="form-group">
                    <label for="authorTextField">Client Phone Number</label>
                    <input type="text" class="form-control" id="authorTextField" placeholder="Enter Phone Number" name="phonenumber"
                        value="<%= ContactList.phonenumber %>" required>
                </div>

                <div class="form-group">
                    <label for="publishedTextField">Year</label>
                    <input type="text" class="form-control" id="publishedTextField" placeholder="Enter Email Address" name="email"
                        value="<%= ContactList.email %>" required>
                </div>

                <div class="form-group">
                    <label for="priceTextField">Price</label>
                    <input type="text" class="form-control" id="priceTextField" placeholder="Enter Client's age" name="age"
                    value="<%= ContactList.age %>" required>
                </div>

                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-edit"></i> Submit
                </button>

                <a href="/biz-contact" class="btn btn-warning">
                    <i class="fas fa-undo"></i> Cancel
                </a>
            </form>
        </div>
    </div>
</div>



<%- include ('../partials/footer') %>


